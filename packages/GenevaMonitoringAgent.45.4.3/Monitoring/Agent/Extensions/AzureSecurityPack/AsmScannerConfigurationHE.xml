    <Scanners>
    <ScannerInfo name="UserGroupScanner"
                     path="UserGroupScanner.exe"
                     persistent="true"
                     frequency="PT0S"
                     firstRunDelay="PT0S"
                     priority="normal"
           featureName="AsmUserGroup"
                     maxRuns="0">
